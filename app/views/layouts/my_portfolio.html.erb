<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Lato|Ubuntu" rel="stylesheet">

    <meta name="keywords" content="<%= @seo_keywords %>" />
    
    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag    'my_portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render "shared/my_portfolio_nav" %>

    <%= render "shared/my_portfolio_masthead" unless logged_in?(:site_admin) %>
    
    <%= yield %>

    <%= render "shared/my_portfolio_footer" %>
    
    <%= alerts %>


  </body>
</html>