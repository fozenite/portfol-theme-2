<div class="app-card-container">
  <div class="card">
    <h1>About</h1>
    <hr>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "profile.jpg", width: 300, alt: "Profile Image", class: 'profile-img' %>
      </div>
      <div class="col-md-8">
        <%= about_me_content %>
        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controller="jobHistory"
          >
            Job History
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controller="education"
          >
            Education
          </button> 
        </p>

        <div>
          <div class="collapse" id="jobHistory">
            <h2> Job History <%= fa_icon "briefcase" %></h2>
            <div class="card card-block">
              Job 1
            </div>
            <div class="card card-block">
              Job 2
            </div>
          </div>
          <div class="collapse" id="education">
            <h2> Education <%= fa_icon "university" %></h2>
            <div class="card card-block">
              School 1
            </div>
            <div class="card card-block">
              School 2
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

