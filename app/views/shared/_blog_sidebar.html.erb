<div class="col-sm-3 offset-sm-1 blog-sidebar">
  <div class="sidebar-module sidebar-module-inset">
    <h4>About</h4>
    <%= about_me_content %>
  </div>

    <%= source_helper("alert alert-primary blog-sidebar-source") %>

  <div class="sidebar-module">
    <h4>Topics</h4>
    <% @sidebar_topics.each do |topic| %>
      <p><%= link_to topic.title, topic_path(topic) %></p>
    <% end %>
  </div>
  <div class="sidebar-module">
    <h4>Connect</h4>
    <ol class="list-unstyled social-links">
      <li><a href="https://github.com/rohit-moza"><%= fa_icon "github" %></a></li>
      <li><a href="https://www.linkedin.com/in/rohit-moza/"><%= fa_icon "linkedin" %></a></li>
      <li><a href="https://twitter.com/rohit_moza"><%= fa_icon "twitter" %></a></li>
      <li><a href="https://www.facebook.com/rohit.moza"><%= fa_icon "facebook" %></a></li>
    </ol>
  </div>
</div><!-- /.blog-sidebar -->